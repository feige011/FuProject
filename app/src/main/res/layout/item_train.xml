<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    android:layout_margin="5dp"
    android:layout_height="90dp"
    android:layout_width="match_parent"
    app:cardCornerRadius="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardTrainPeople"
    >


    <LinearLayout

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_hr_employee_item_picture"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_head_foreground"
            android:layout_marginLeft="10dp" />
        <TextView
            android:id="@+id/tv_hr_employee_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="***"
            android:textSize="18sp"
            android:textColor="#171616"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/iv_hr_employee_item_picture"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_hr_employee_item_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_hr_employee_item_picture"
            android:layout_alignBottom="@+id/iv_hr_employee_item_picture"
            android:text="*****"
            android:textSize="18sp"
            android:textColor="#171616"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp" />
        <TextView

            android:id="@+id/tv_hr_time_item_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"

            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:text="2021-3-30"
            android:textSize="18sp"
            android:textColor="#FF878B97"
          />
    </RelativeLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>


